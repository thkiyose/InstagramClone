<%= form_with(model:@post,local:true) do |form| %>
  <% if @post.errors.any? %>
    <div class="error_display">
      <% @post.errors.full_messages.each do |error| %>
        <p><%= error %></p>
      <% end %>
    </div>
  <% end %>
  <p><%= form.text_field :content %></p>
  <p><%= form.file_field :image %></p>
  <%= form.hidden_field :image_cache %>
  <%= form.submit "post"%>
<% end %>
