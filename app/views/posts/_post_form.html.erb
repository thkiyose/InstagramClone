<%= form_with(model:@post,local:true) do |form| %>
  <% if @post.errors.any? %>
    <div class="error_display">
      <% @post.errors.full_messages.each do |error| %>
        <p><%= error %></p>
      <% end %>
    </div>
  <% end %>
  <%= form.text_field :content %>
  <%= form.submit "post"%>
<% end %>
