<!DOCTYPE html>
<html>
  <head>
    <title>InstagramClone</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <header>
    <p class="header-logo">MyPics</p>
    <ul class="header-nav">
      <li><%= link_to "home", posts_path %></li>
      <% if logged_in? %>
        <li><%= link_to "new", new_post_path %></li>
        <li><%= link_to "favs", posts_path %></</li>
        <li><%= link_to "MyPage", user_path(current_user.id) %></</li>
        <li><%= link_to "LogOut", posts_path %></</li>
        <% else %>
      <% end %>
        <li><%= link_to "LogIn", new_session_path %></li>
        <li><%= link_to "SignUp", new_user_path %></li>
    </ul>
  </header>
  <body>
    <% flash.each do |key,value| %>
      <%= content_tag(:div,value,class:key) %>
    <% end %>
    <main>
      <%= yield %>
    </main>
  </body>
</html>
